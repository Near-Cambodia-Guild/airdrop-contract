{
  "name": "khnear-airdrop-2",
  "version": "1.0.0",
  "license": "(MIT AND Apache-2.0)",
  "scripts": {
    "airdrop": "tsc && node ./dist/index.js",
    "start": "cd frontend && npm run start",
    "deploy": "cd contract && ./deploy.sh",
    "build": "npm run build:contract && npm run build:web",
    "build:web": "cd frontend && npm run build",
    "build:contract": "cd contract && ./build.sh",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "cd contract && cargo test",
    "test:integration": "cd integration-tests && npm test -- -- \"./contract/target/wasm32-unknown-unknown/release/khnear_airdrop.wasm\"",
    "postinstall": "cd frontend && npm install && cd .. && cd integration-tests && npm install && cd .. && echo rs contract"
  },
  "devDependencies": {
    "@types/node": "^18.11.0",
    "dotenv": "^16.0.3",
    "near-cli": "^1.0.0"
  },
  "dependencies": {
    "csv-parser": "^3.0.0",
    "near-api-js": "^1.1.0"
  }
}
